@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-container">
    <div class="card">
        <h2 class="center-text">Reset Password</h2>
        <p class="center-text mb-2" style="color: var(--text-secondary);">Enter your email to receive a reset link.</p>
        
        @if (Model.Success)
        {
            <div class="success-message">
                Reset link sent! Check your email (or server console).
            </div>
        }
        else
        {
            <form method="post">
                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <input asp-for="Email" type="email" required />
                </div>
                
                <button type="submit" class="btn btn-primary" style="width: 100%;">Send Reset Link</button>
            </form>
        }
        
        <p class="center-text mt-1" style="color: var(--text-secondary);">
            <a href="/Auth/Login" style="color: var(--accent);">Back to Login</a>
        </p>
    </div>
</div>
