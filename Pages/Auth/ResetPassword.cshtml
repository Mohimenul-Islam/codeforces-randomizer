@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Set New Password";
}

<div class="auth-container">
    <div class="card">
        <h2 class="center-text">Set New Password</h2>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">@Model.ErrorMessage</div>
        }
        
        <form method="post">
            <input type="hidden" asp-for="Token" />
            
            <div class="form-group">
                <label asp-for="NewPassword">New Password</label>
                <input asp-for="NewPassword" type="password" required minlength="6" />
            </div>
            
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" required minlength="6" />
            </div>
            
            <button type="submit" class="btn btn-primary" style="width: 100%;">Change Password</button>
        </form>
    </div>
</div>
